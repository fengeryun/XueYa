<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#4CBF5C"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/details_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_brows_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预约详情"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#C0C0C0"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="凭专家号领取凭证"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请在就诊前一天16点之前领取加号凭证"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/details_tv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/details_tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/details_tv3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/details_tv4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="挂号费:"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/details_tv7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="挂号费:"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"/>
        <TextView
            android:text="预约状态:未通过审核"
            android:id="@+id/details_tv5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/details_tv6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:text=""
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/details_tv8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:text="取消预约"
        android:gravity="center"
        android:background="#C0C0C0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"/>
</LinearLayout>