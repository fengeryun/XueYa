<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/yuyue_layout"
    android:background="@color/whitesmoke"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yuyue_backs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_brows_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="预约专家"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/yuyue_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/yuyue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="二运"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/yuyue_yiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/yuyue_name"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="宝芝林"
                android:layout_marginTop="1dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/yuyue_zhiwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yuyue_name"
                android:text="主任"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/yuyue_jineng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yuyue_name"
                android:layout_toRightOf="@id/yuyue_zhiwei"
                android:text="妇科"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/yuyue_xueli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yuyue_name"
                android:layout_toRightOf="@id/yuyue_jineng"
                android:layout_marginTop="5dp"
                android:text="博士"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/yuyue_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yuyue_xueli"
                android:layout_marginTop="8dp"
                android:text="欢迎美女"
                android:maxLines="2"
                />

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/yuyue_listview"
        >

    </ListView>

</LinearLayout>