<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/remind_linear"
    android:background="@color/whitesmoke"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/remind_head"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#08d355"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/remind_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_brows_back" />

        <TextView
            android:id="@+id/record_titlle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用药提醒"
            android:textColor="#fff"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/remind_jia"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:layout_below="@id/remind_head"
        android:id="@+id/remind_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
