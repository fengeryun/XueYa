<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/add_linear"
    android:background="@color/whitesmoke"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#08d355"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_brows_back" />

        <TextView

            android:id="@+id/record_titlle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加提醒"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/add_lay"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="储存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:textSize="20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="  服药时间" />

    <TextView
        android:id="@+id/main_tv_showtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="显示时间的控件" />

    <RelativeLayout
        android:background="#FBF8F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TimePicker
      android:layout_centerInParent="true"
        android:id="@+id/main_tp_showTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:text="  提醒详情"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="10dp"
        android:text="药品名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_name"
            android:background="@drawable/drug"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="2dp"
            android:background="@color/gainsboro"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="服用名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:phoneNumber="true"
            android:id="@+id/add_dosis"
            android:hint="剂量"
            android:background="@drawable/drug"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>