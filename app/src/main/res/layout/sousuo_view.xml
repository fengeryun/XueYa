<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:id="@+id/sousuo_layout"
    >

    <TextView
        android:id="@+id/sousuo_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关键   "
        android:gravity="center"
        android:textSize="20sp"
        android:drawableLeft="@mipmap/ic_brows_back"
        android:textColor="@color/white"
        android:padding="14dp"
        android:background="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/sousuo_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sousuo"
            android:layout_margin="5dp"
            android:hint="@string/sousuocontent"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/sousuo_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/sousuo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </ListView>

</LinearLayout>