<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fugai"
    android:id="@+id/populayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/jobname"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/popu_buxian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="不限"
                android:gravity="center"
                android:background="@drawable/doctorjobbut"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/popu_zhuren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="主任医师"
                android:gravity="center"
                android:background="@drawable/doctorjobbut"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/popu_fuzhuren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="副主任医师"
                android:gravity="center"
                android:background="@drawable/doctorjobbut"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:id="@+id/popu_lao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="老中医"
                android:gravity="center"
                android:background="@drawable/doctorjobbut"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/popu_yishi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="医师"
                android:gravity="center"
                android:background="@drawable/doctorjobbut"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/popu_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:background="@drawable/doctorjobs"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        />

</RelativeLayout>